#!/usr/bin/env node
var debug = require('debug')('evenster');
var app = require('../app');

app.set('host', process.env.IP   || process.env.OPENSHIFT_NODEJS_IP   || '0.0.0.0');
app.set('port', process.env.PORT || process.env.OPENSHIFT_NODEJS_PORT || '3000');

var server = app.listen(app.get('port'), function() {
  debug('Express server listening on port ' + app.set('host') + ':' + app.set('port'));
  console.log('Express server listening on port ' + app.set('host') + ':' + app.set('port'));
});
